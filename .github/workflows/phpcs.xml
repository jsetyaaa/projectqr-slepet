<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="MyProject">
    <description>Coding standards for MyProject</description>

    <arg name="version" value="5"/>

    <severity name="Error" value="10"/>
    <severity name="Warning" value="5"/>

    <ruleset name="Generic">
        <rule ref="Generic/Commenting"/>
        <rule ref="Generic/WhiteSpace"/>
        <rule ref="Generic/NamingConventions"/>
        <rule ref="Generic/Files"/>
    </ruleset>

    <ruleset name="Squiz">
        <rule ref="Squiz/Commenting"/>
        <rule ref="Squiz/WhiteSpace"/>
        <rule ref="Squiz/NamingConventions"/>
        <rule ref="Squiz/Functions"/>
        <rule ref="Squiz/ControlStructures"/>
    </ruleset>
</ruleset>
